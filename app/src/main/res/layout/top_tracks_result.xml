<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/top_tracks_result_image_view"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:longClickable="false"
        android:padding="@dimen/artist_search_result_image_padding" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/top_tracks_result_track_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/top_tracks_result_track_name" />

        <TextView
            android:id="@+id/top_tracks_result_album_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/top_tracks_result_album_name" />
    </LinearLayout>
</LinearLayout>